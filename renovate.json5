{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>microsoft/m365-renovate-config:beachballLibraryRecommended",
    "github>microsoft/m365-renovate-config:groupMore",
    "github>microsoft/m365-renovate-config:keepFresh"
  ],

  "labels": ["renovate"],

  "packageRules": [
    // Group @types minor/patch upgrades together, to reduce initial PRs
    {
      "groupName": "@types packages",
      "matchPackagePrefixes": ["@types/"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    // For @types/node we're intentionally staying on 12 (could probably go to 14)
    { "matchPackageNames": ["@types/node"], "allowedVersions": "<13.0.0" }
  ]
}
