{
  "name": "@microsoft/just-repo",
  "version": "1.0.1",
  "private": true,
  "description": "",
  "keywords": [],
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/just"
  },
  "scripts": {
    "build": "lage build",
    "postbuild": "node ./scripts/copyReadme.js",
    "docs": "vuepress dev docs --host localhost",
    "docs:build": "vuepress build docs",
    "gh-pages": "gh-pages",
    "change": "beachball change",
    "checkchange": "beachball check",
    "prettier:all": "yarn prettier --write .",
    "release": "beachball publish",
    "release:docs": "yarn docs:build && yarn gh-pages -d docs/.vuepress/dist --dotfiles",
    "start": "lage start",
    "test": "lage test",
    "prelint": "syncpack list-mismatches",
    "lint": "eslint packages --ext .ts,.js"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.13",
    "@types/jest": "26.0.24",
    "@types/node": "14.18.36",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "@typescript-eslint/parser": "5.52.0",
    "beachball": "2.31.11",
    "eslint": "8.34.0",
    "gh-pages": "4.0.0",
    "jest": "26.6.3",
    "lage": "1.9.6",
    "mock-fs": "4.14.0",
    "prettier": "2.8.4",
    "syncpack": "8.5.14",
    "ts-jest": "26.5.6",
    "typescript": "4.1.3",
    "vuepress": "1.9.8",
    "vuepress-plugin-mermaidjs": "1.9.1"
  },
  "resolutions": {
    "es5-ext": "0.10.53",
    "kind-of": "^6.0.3"
  },
  "beachball": {
    "groupChanges": true,
    "ignorePatterns": [
      ".*ignore",
      "jest.config.js",
      "**/__tests__/**",
      "**/*.spec.ts",
      "**/*.test.ts"
    ]
  },
  "syncpack": {
    "prod": true,
    "dev": true,
    "peer": false,
    "workspace": false
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "scripts"
    ]
  }
}
