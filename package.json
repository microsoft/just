    "gh-pages": "^3.1.0",
    "lage": "^0.27.1",
    "prettier": "^2.2.1",
    "syncpack": "^5.6.10",
    "vuepress": "^1.8.0",
    "vuepress-plugin-mermaidjs": "^1.8.1"
  },
  "resolutions": {
    "kind-of": "^6.0.3"
  },
  "syncpack": {
    "prod": true,
    "dev": true,
    "peer": false
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "scripts"
    ]
